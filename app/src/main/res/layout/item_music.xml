<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2196F3"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="12dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_baseline_music_note_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/music_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/icon_view"
        app:layout_constraintTop_toTopOf="@id/icon_view"
        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        tools:text="Music" />

    <TextView
        android:id="@+id/music_artist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/music_title_text"
        app:layout_constraintStart_toStartOf="@+id/music_title_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="1"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:text="Music" />


</androidx.constraintlayout.widget.ConstraintLayout>